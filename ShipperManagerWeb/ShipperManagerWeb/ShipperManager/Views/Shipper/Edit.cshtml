@model ShipperManager.Models.Shipper

@{
    ViewBag.Title = "Edit";
}

<h2>Chỉnh Sửa Thông Tin Shipper</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Shipper</h4>
